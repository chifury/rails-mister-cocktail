<!-- Modal -->
<div class="modal fade" id="imgModalTwo" tabindex="-1" aria-labelledby="imgModalTwoLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-dark border-0 rounded-4 shadow-lg p-5 position-relative">
      <!-- Close button -->
      <button type="button"
              class="btn-close btn-close-white position-absolute"
              style="top: 1.75rem; right: 1.75rem; --bs-btn-close-width: 1.25em; --bs-btn-close-height: 1.25em; opacity: 0.9;"
              data-bs-dismiss="modal"
              aria-label="Close"></button>
      <!-- Image -->
      <div class="modal-body d-flex justify-content-center align-items-center p-4">
        <img src="<%= image_2 %>"
             alt="Expanded view of image #2"
             class="img-fluid rounded shadow border border-4"
             style="border-color: white; padding: 10px; max-height: 80vh; object-fit: contain; background-color: white;">
      </div>
    </div>
  </div>
</div>
